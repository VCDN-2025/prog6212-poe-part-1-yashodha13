@model IEnumerable<CMCS.PROG6212.Models.Claim>

@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<h2>Coordinator Dashboard</h2>

<p>Below is the list of claims pending your review:</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Claim ID</th>
            <th>Lecturer ID</th>
            <th>Month</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.LecturerId</td>
                <td>@claim.Month.ToString("MMMM yyyy")</td>
                <td>@claim.TotalAmount.ToString("C")</td>
                <td>@claim.Status</td>
                <td>
                    <a asp-controller="Coordinator" asp-action="Review" asp-route-id="@claim.ClaimId" class="btn btn-primary btn-sm">
                        Review
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
