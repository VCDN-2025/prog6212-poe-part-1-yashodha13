@model IEnumerable<CMCS.PROG6212.Models.Claim>

@{
    ViewData["Title"] = "Academic Manager Dashboard";
}

<h2>Academic Manager Dashboard</h2>

<p>Below is the list of submitted claims for your approval:</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Claim ID</th>
            <th>Lecturer ID</th>
            <th>Month</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Coordinator Review</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.LecturerId</td>
                <td>@claim.Month.ToString("MMMM yyyy")</td>
                <td>@claim.TotalAmount.ToString("C")</td>
                <td>@claim.Status</td>
                <td>@claim.CoordinatorComments</td>
                <td>
                    <a asp-controller="AcademicManager" asp-action="Approve" asp-route-id="@claim.ClaimId"
                       class="btn btn-success btn-sm"
                       onclick="return confirm('Are you sure you want to approve this claim?');">
                        Approve
                    </a>
                    <a asp-controller="AcademicManager" asp-action="Reject" asp-route-id="@claim.ClaimId"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to reject this claim?');">
                        Reject
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
